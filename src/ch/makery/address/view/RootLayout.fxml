<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="700.0" stylesheets="@applicationStyle.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.RootLayoutController">
    <left>
        <AnchorPane fx:id="leftBorderAnchor" prefHeight="345.0" prefWidth="93.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="2.0" layoutY="130.0" prefHeight="83.0" prefWidth="98.0" styleClass="message-label" text="You are editing a student information" textAlignment="CENTER" wrapText="true" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="3.0" AnchorPane.topAnchor="130.0" />
            </children></AnchorPane>

    </left>
    <top>
        <AnchorPane maxHeight="58.0" minHeight="50.0" minWidth="0.0" prefHeight="55.0" prefWidth="698.0" stylesheets="@applicationStyle.css">
            <children>
                <ButtonBar prefHeight="40.0" prefWidth="513.0" AnchorPane.rightAnchor="10.0">
                    <buttons>
                        <Button fx:id="viewButton" mnemonicParsing="false" onAction="#clickViewButton" styleClass="generalbutton" text="View Student List" />
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleNewPerson" text="Add a new student" />
                        <Button fx:id="editButton" mnemonicParsing="false" onAction="#clickEditButton" text="Edit a student information" />
                    </buttons>
                </ButtonBar>
                <ToggleButton mnemonicParsing="false" onAction="#clickLogoButton" prefHeight="84.0" prefWidth="88.0" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="2.0" />
            </children>
        </AnchorPane>
    </top>
</BorderPane>
